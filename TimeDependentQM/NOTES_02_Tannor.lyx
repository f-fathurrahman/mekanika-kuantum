\end_layout

\begin_layout Standard
Lanjutkan
\begin_inset Formula 
\begin{align*}
\left\langle x\right\rangle _{t} & =2\pi\int_{-\infty}^{\infty}a^{*}(k)e^{\frac{\imath\hbar k^{2}}{2m}t}\,\imath\frac{\partial}{\partial k}\,\left(a(k)e^{-\frac{\imath\hbar k^{2}}{2m}t}\right)\,\mathrm{d}k\\
 & =2\pi\int_{-\infty}^{\infty}a^{*}(k)e^{\frac{\imath\hbar k^{2}}{2m}t}\,\imath\left(\frac{\partial a(k)}{\partial k}e^{-\frac{\imath\hbar k^{2}}{2m}t}-\imath\hbar\frac{kt}{m}\,a(k)e^{-\frac{\imath\hbar k^{2}}{2m}t}\right)\,\mathrm{d}k\\
 & =2\pi\left[\int_{-\infty}^{\infty}a^{*}(k)\,\imath\,\frac{\partial a(k)}{\partial k}\,\mathrm{d}k+\int_{-\infty}^{\infty}a^{*}(k)\hbar\frac{kt}{m}\,a(k)\,\mathrm{d}k\right]\\
 & =2\pi\int_{-\infty}^{\infty}a^{*}(k)\,\imath\,\frac{\partial a(k)}{\partial k}\,\mathrm{d}k+2\pi\frac{\hbar t}{m}\int_{-\infty}^{\infty}a^{*}(k)\,k\,a(k)\,\mathrm{d}k\\
 & =2\pi\int_{-\infty}^{\infty}a^{*}(k)\,\imath\,\frac{\partial a(k)}{\partial k}\,\mathrm{d}k+\frac{t}{m}h\left\langle k\right\rangle \\
 & =\left\langle x\right\rangle _{0}+\frac{\left\langle p\right\rangle t}{m}
\end{align*}

\end_inset

dengan:
\begin_inset Formula 
\[
\left\langle k\right\rangle =\int_{-\infty}^{\infty}a^{*}(k)\,k\,a(k)\,\mathrm{d}k
\]

